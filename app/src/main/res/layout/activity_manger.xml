<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".manger">

    <Button
        android:id="@+id/b1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/oval_shap"
        android:onClick="add_medicine"
        android:text="add medicine"
        android:textAllCaps="false"
        android:textColor="#0a0f0f"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/b2"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@+id/b1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/oval_shap"
        android:onClick="show_report"
        android:text="show report"
        android:textAllCaps="false"
        android:textColor="#0a0f0f"
        android:textSize="37sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/b2"
        android:layout_alignLeft="@+id/b2"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="177dp"
        android:background="@drawable/oval_shap"
        android:onClick="Request_medicine"
        android:text="Request medicine"
        android:textAllCaps="false"
        android:textColor="#0a0f0f"
        android:textSize="29sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/b2"
        android:layout_alignLeft="@+id/b2"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="73dp"
        android:background="@drawable/oval_shap"
        android:onClick="cleanByDate"
        android:text="Delete expire Date"
        android:textAllCaps="false"
        android:textColor="#0a0f0f"
        android:textSize="29sp"
        android:textStyle="bold" />

</RelativeLayout>