<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".show_data">
    <LinearLayout
        android:id="@+id/lis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="id"
           android:textSize="25sp"
           android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="25sp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="potion"
            android:textSize="25sp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="quailty"
            android:textSize="25sp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="company"
            android:textSize="20sp"
            android:layout_marginRight="10dp"/>


    </LinearLayout>

    <ListView
        android:id="@+id/listdata"
        android:layout_width="match_parent"
        android:layout_height="355dp"
        android:layout_below="@+id/lis"
        android:layout_marginTop="-6dp">

    </ListView>
    <EditText
        android:id="@+id/editid2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the id"
        android:textColorHint="#fff"
        android:layout_below="@+id/listdata"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editid2"
        android:text="Delete"
        android:onClick="delete2"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginLeft="130dp"
        android:textSize="29sp"
        android:background="@drawable/oval_shap"
        android:padding="10dp"
        android:drawableRight="@drawable/ic_delete_forever"/>
</RelativeLayout>